<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Prevencao">

    <View
        android:id="@+id/containerComponentes5"
        style="@style/ContainerComponents"
        android:layout_width="352dp"
        android:layout_height="627dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/prevencao4"
        android:layout_width="109dp"
        android:layout_height="89dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentes5"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/containerComponentes5"
        app:layout_constraintTop_toTopOf="@+id/containerComponentes5"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/image18" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="144dp"
        android:layout_height="37dp"
        android:layout_marginBottom="40dp"
        android:text="Prevenção"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentes5"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/containerComponentes5" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="211dp"
        android:layout_height="95dp"
        android:layout_marginBottom="8dp"
        android:text="Ao aviso de tempestade ou ao escutar trovões "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentes5"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/prevencao2" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="276dp"
        android:layout_height="85dp"
        android:layout_marginBottom="4dp"
        android:text=" Permanecer longe de janelas, tomadas e materiais metálicos"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView17"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentes5"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toStartOf="@+id/containerComponentes5" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="285dp"
        android:layout_height="84dp"
        android:layout_marginBottom="32dp"
        android:text="Evite árvores ou coberturas metálicas frágeis"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/containerComponentes5"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentes5"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="@+id/containerComponentes5" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="353dp"
        android:layout_height="60dp"
        android:layout_marginBottom="48dp"
        android:text="Em uma edificação ou veículo"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentes5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/containerComponentes5" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="349dp"
        android:layout_height="46dp"
        android:layout_marginBottom="4dp"
        android:text="Abrigue- se imediatamente"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentes5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/containerComponentes5" />

    <ImageView
        android:id="@+id/prevencao2"
        android:layout_width="94dp"
        android:layout_height="84dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="380dp"
        app:layout_constraintBottom_toBottomOf="@+id/containerComponentes5"
        app:layout_constraintStart_toStartOf="@+id/containerComponentes5"
        app:srcCompat="@drawable/chuva" />
</androidx.constraintlayout.widget.ConstraintLayout>